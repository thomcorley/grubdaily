          <p><img src="<%= @recipe.image_url %>" alt="<%= @recipe.title %> Image"></p>

          <% @introduction_paragraphs.each do |paragraph| %>
          <p><%= simple_format(paragraph) %></p>
          <% end %>

          <hr />
          <ul>
            <% @recipe.ingredient_entries.each do |entry| %>
            <li><%= entry.human_readable_entry %></li>
            <% end %>
          </ul>

          <ol>
            <% @method_steps.each do |method_step| %>
            <li><p><%= simple_format(method_step) %></p></li>
            <% end %>
          </ol>
        </div>
