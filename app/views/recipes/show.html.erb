<p id="notice"><%= notice %></p>

<h1><%= @recipe.title %></h1>

<p>
  <strong>Summary:</strong>
  <%= @recipe.summary %>
</p>

<p>
  <strong>Total time:</strong>
  <%= @recipe.total_time %>
</p>

<p>
  <strong>Introduction:</strong><br>
  <% @introduction_paragraphs.each do |p| %>
    <p><%= p %></p>
  <% end %>
</p>

<p>
  <strong>Serves:</strong>
  <%= @recipe.serves %>
</p>

<p>
  <strong>Makes:</strong>
  <%= @recipe.makes %>
</p>

<p>
  <strong>Makes unit:</strong>
  <%= @recipe.makes_unit %>
</p>

<p>
  <strong>Type:</strong>
  <%= @recipe.recipe_type %>
</p>

<em><%= link_to 'Edit Recipe', edit_recipe_path(@recipe) %></em>

<br><br>

<p>
    <strong>Tags:</strong> <% @tags.each do |t| %><a href="<%= edit_tag_path(t) %>"><%= "#{t.name.upcase} " %></a><% end %>
</p>

<em>(Click on Tags above to edit them individually.)</em>

<br><br>

<p>
  <strong>Ingredients:</strong>
  <% @ingredient_sets.each do |s| %>
    <% if s.title? %>
      <p><em><%= s.title %>:</em></p><br>
    <% end %>
    <% s.ingredient_entries.each do |e| %>
      <p>
        <a href="<%= edit_ingredient_entry_path(e) %>"><%= e.original_string %></a>        
      </p>
    <% end %>
  <% end %>
</p>

<br><br>

<p>
  <strong>Method:</strong><br>
  <% @method_steps.each do |m| %>
    <p><%= m.position %>. <%= m.description %></p>
  <% end %>
</p>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %> |
<%= link_to 'Generate Jekyll Post', "/generate_jekyll_post?recipe_id=#{@recipe.id}" %>

