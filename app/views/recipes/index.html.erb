<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Total time</th>
      <th>Introduction</th>
      <th>Serves</th>
      <th>Makes</th>
      <th>Makes unit</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.summary %></td>
        <td><%= recipe.total_time %></td>
        <td><%= recipe.introduction %></td>
        <td><%= recipe.serves %></td>
        <td><%= recipe.makes %></td>
        <td><%= recipe.makes_unit %></td>
        <td><%= recipe.type %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

