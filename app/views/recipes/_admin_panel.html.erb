<div class="dropdown is-hoverable print">
  <div class="dropdown-trigger">
    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
      <span>Admin Panel</span>
      <span class="icon is-small">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </button>
  </div>
  <div class="dropdown-menu" id="dropdown-menu" role="menu">
    <div class="dropdown-content">
      <a href="<%= test_email_recipes_path %>?id=<%= @recipe.id %>" class="dropdown-item">
        Test Email
      </a>

      <a href="<%= unpublish_recipes_path %>?id=<%= @recipe.id %>" class="dropdown-item">
        Unpublish
      </a>

      <a href="<%= publish_recipes_path %>?id=<%= @recipe.id %>" class="dropdown-item">
        Unpublish
      </a>

      <a href="<%= edit_recipe_path(@recipe) %>" class="dropdown-item">
        Edit
      </a>
    </div>
  </div>
</div>

<% if @next_recipe %>
  <a href="<%= recipe_path(@next_recipe) %>" class="print">
    Next
  </a>
<% end %>

<% if @prev_recipe %>
  <a href="<%= recipe_path(@prev_recipe) %>" class="print">
    Previous
  </a>
<% end %>

