<% if @next_recipe %>
  <a href="<%= recipe_path(@next_recipe) %>" class="print">
    Next
  </a>
<% end %>

<% if @prev_recipe %>
  <a href="<%= recipe_path(@prev_recipe) %>" class="print">
    Previous
  </a>
<% end %>

<a href="<%= unpublish_recipes_path %>?id=<%= @recipe.id %>" class="print">
  Unpublish
</a>

<a href="<%= publish_recipes_path %>?id=<%= @recipe.id %>" class="print">
  Publish
</a>

<a href="<%= edit_recipe_path(@recipe) %>" class="print">
  Edit
</a>
