<section class="delicious">
  <main role="main">
    <section class="index" itemscope itemtype="http://schema.org/Blog">
      <section class="newest-recipes clear">

        <article class="post" role="article" itemprop="blogPosts" itemscope itemtype="http://schema.org/BlogPosting">
          <div class="post-excerpt">
            <p><img src="<%= @latest_recipe.image_url %>" alt="<%= @latest_recipe.title %>"/></p>
          </div>
          <div class="details">
            <h6 class="post-title first-post" itemprop="name headline">
              <a itemprop="url" href="<%= @latest_recipe.permalink %>"><%= @latest_recipe.title %></a>
            </h6>

            <div class="post-content">
              <%= simple_format(@latest_recipe_excerpt) %>
            </div>
          </div>
        </article>

        <div id="subscribed" style="display: none"></div>

        <% @next_two_latest_recipes.each do |recipe| %>
          <article class="post" role="article" itemprop="blogPosts" itemscope itemtype="http://schema.org/BlogPosting">
            <div class="post-excerpt">
              <p><img src="<%= recipe.image_url %>" alt="<%= recipe.title %>" /></p>
            </div>
            <div class="details">
              <h6 class="post-title first-post" itemprop="name headline">
                <a itemprop="url" href="<%= recipe.permalink %>"><%= recipe.title %></a>
              </h6>
            </div>
          </article>
        <% end %>
      </section>

      <% if admin_session? %>
        <section class="subscribe-form clear">
          <%= form_with model: @email_subscriber, url: email_subscribers_path do |form| %>
            <div class="field has-addons is-justify-content-center">
              <div class="control">
                  <%= form.email_field :email, class: "input is-medium email-field", placeholder: "Email me tasty things!" %>
              </div>
              <div class="control">
                  <%= form.submit value: "Go", class: "button is-medium submit-button" %>
              </div>
            </div>
          <% end %>

          <% if flash[:email_subscribed_notice] %>
            <div class="notice"><%= flash[:email_subscribed_notice] %></div>
          <% end %>
        </section>
      <% end %>

      <section class="posts clear">
        <div class="section-title"><span>Recent Recipes</span></div>

        <% @recent_recipes.each do |recipe| %>
          <article class="post" role="article" itemprop="blogPosts" itemscope itemtype="http://schema.org/BlogPosting">
            <h2 class="post-title" itemprop="name headline">
              <a itemprop="url" href="<%= recipe.permalink %>">
                <%= recipe.title %>
              </a>
            </h2>

            <div class="post-content">
              <p><img src="<%= recipe.image_url %>" alt="<%= recipe.title %>" /></p>
            </div>
          </article>
        <% end %>
      </section>

      <section class="posts clear bottom-panel" style="margin-bottom: 80px;">
        <div class="social clear">
          <a href="https://facebook.com/grubdaily"><%= render "facebook_icon" %></a>
          <a href="twitter.com/grubdaily_tom"><%= render "twitter_icon" %></a>
          <a href="https://www.instagram.com/grubdaily"><%= render "instagram_icon" %></a>
          <a href="https://www.pinterest.co.uk/grubdaily"><%= render "pinterest_icon" %></a>
        </div>
        <!-- <a class="view-all" href="/photos">Click here to see ALL photos</a> -->
      </section>
    </section>
  </main>
</section>
